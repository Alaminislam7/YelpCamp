<%- include("../partials/header") %>



<div class="container mt-5">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgraunds</p>
            <p>
                <a href="campgraunds/new" class="btn btn-primary btn-large"> Add new Campgraund</a>
            </p>
        </div>
    </header>
    <div class = "row text-center"  style = "display : flex; flex-wrap : wrap">
        <% campgraunds.forEach(function(campground) {  %>
           <div class = "col-md-6">
           
              <div class = "thumbnail">
              <img src = "<%= campground.image%>" >
              <div class= "caption">
                    <h4> <%= campground.name %> </h4>  
              </div>
              <p>
                  <a href = "/campgraunds/<%= campground._id %>" class = "btn btn-primary"> more info</a>
              </p>
              </div>
           </div>
       <% }) %> 
   </div>
</div>

<%- include("../partials/footer") %>