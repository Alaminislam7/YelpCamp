<%- include("../partials/header") %>











<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead">YelpCamp</p>
            <div class = "list-group">
                <li class = "list-group-item active">intro1</li>
                <li class = "list-group-item">intro2</li>
                <li class = "list-group-item">intro3</li>
            </div>
        </div>
        <div class = "col-md-9">
            <div class = "thumbnail">
                 <img class = "img-responsive" src = " <%= campgraund.image%>">
                 <div class = "caption-full">
                     <h4><a><%=campgraund.name%></a></h4>
                     <p><%= campgraund.description%></p>
                     


                     

                 </div>
            </div>
            <div class = "well">
                <div class = "text-right">
                    <a class = "btn btn-success" href = "/campgraunds/<%= campgraund._id%>/comments/new">Add new comments</a>
                </div>
                <hr>
                 <% campgraund.comments.forEach(function(comment) {   %>
                 <div class = "row">
                     <div class = "col-md-12">
                         <strong><%= comment.author%></strong>
                         <span class = "pull-right">10 days ago</span>
                         <p>
                             <%= comment.text%>
                         </p>


                         
                     </div>
                 </div>
                <% })%>
            </div>
        </div>
    </div>
</div> 



<%- include("../partials/footer") %>


